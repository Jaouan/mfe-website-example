{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": { "dependsOn": ["^build"] },
    "lint": { "dependsOn": ["^lint"] },

    "remote-mfe-1#build": { "outputs": ["dist/**"] },
    "remote-mfe-1#dev": {},

    "layout#build": { "outputs": ["dist/**"] },
    "layout#dev": {},

    "global-store#build": { "outputs": ["dist/**"] },
    "global-store#dev": {},

    "shell#build:prod": { "dependsOn": ["remote-mfe-1#build", "layout#build"] },
    "shell#dev": {
      "dependsOn": ["remote-mfe-1#build", "layout#build"],
      "cache": false,
      "persistent": true
    }
  }
}
