{
  "name": "pululu-portal",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:prod": "turbo \"shell#build:prod\"",
    "dev": "turbo \"shell#dev\"",
    "dev:mfe": "turbo \"remote-mfe-1#dev\"",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "packages/*"
  ]
}
